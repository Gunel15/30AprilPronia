@using _30AprilClassTaskPronia.Models
@model List<Service>

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">


            <a class="btn btn-success m-4" asp-action="Create" asp-controller="Service">Create</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ImagePath</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>

                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var service in Model)
                    {

                        <tr>
                            <th scope="row">@service.Id</th>
                            <td><img src="~/assets/images/website-images/@service.ImagePath" width="100" height="100" alt="Alternate Text" /></td>
                            <td>@service.Title</td>
                            <td>@service.Description</td>
                          
                            <td>
                                <a class="btn btn-warning" asp-action="Update" asp-controller="service" asp-route-id="@service.Id">Update</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="service" asp-route-id="@service.Id">Delete</a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </main>
</div>